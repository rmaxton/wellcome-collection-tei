                        <msItem n="1" xml:id="Alpha_2245_1">
                            <locus>F.1 </locus>
                            <title>14 lines of prayers</title>
                            <incipit><locus>F.1 </locus>oṃ su[śu]klāṃ[va al]aradharaṃ viṣṇuṃ
                                śaśivarṇaṃ caturbhujaṃ || prasannavadanaṃ dhyāy[ā]t
                                sarvavighnopaśāṃtaye ||1|| śrīmahānṣṇur iti bījaṃ ||</incipit>
                            <explicit><locus>F.1 </locus>iti ṣaḍaṃganyāsaḥ ||</explicit>
                        </msItem>

                        <msItem n="2" xml:id="Alpha_2245_2">
                            <locus>F.1v </locus>
                            <title>Vajjarapañjara</title>
                            <incipit><locus>F.1v </locus>śrīgaṇeśāya namaḥ oṃ asya
                                śrīrāmarakśā-kavacamālāmaṃtrasya viśvāmitra anuṣṭup chaṃdaḥ
                                śrīrāmaparātmā devatā.</incipit>
                            <explicit><locus>F.1v </locus>iti śrīvajjarapaṃjaranāma śrīrāmaka[va
                                al]caṃ saṃpūrṇam ||</explicit>
                        </msItem>

